{
  // MCP Servers for Virtual Programming Lab
  // Use Ctrl+Shift+I to open Chat, click "Start" above each server to activate
  
  "servers": {
    // Supabase — DB queries, migrations, TypeScript types, Edge Functions, logs
    "supabase": {
      "type": "http",
      "url": "https://mcp.supabase.com/mcp"
    },

    // Context7 — Live docs for React, TypeScript, Tailwind (prevents outdated suggestions)
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"]
    },

    // Sequential Thinking — Better multi-step reasoning for complex tasks
    "sequentialThinking": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    }
  }
}
